<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
  
  <grid  model="com.axelor.student.db.Student" title="Students" name="student-grid" groupBy="classNumber" >
  	<field name="name" width="200px"/>
  	<field name="email"/>
  	<field name="rollNumber"/>
  	<field name="classNumber"/>
  	<field name="percentage" aggregate="avg"/>
  	<field name="parentName"/>
  </grid>
  
  <form model="com.axelor.student.db.Student" title="Student" name="student-form" editable="true"  onNew="action-student-record-onnew" 
  onLoad="action-student-validate-student" onSave="action-student-record-onsave" canAttach="false" width="large" >
  <panel name="mainPanel" title="Main Panel" showFrame="true" if-module="student-module">
  
  <!-- colspan is 6 by default  -->
  	<panel name="innerPanel1" colSpan="8" title="innerPanel 1" >
  		<field name="status" colSpan="8" showTitle="false" widget="NavSelect"/>
  		<field name="fullName" readonly="true" colSpan="4" />
  		<field name="name"/>
  		<field name="email"/>
  		<field name="rollNumber"/>
  		<field name="classNumber"/>
  		<field name="percentage"/>
  	</panel>	
  </panel>
  <panel name="innerPanel2" colSpan="4" title="innerPanel 2" itemSpan="3" hideIf="percentage &lt;= 35" sidebar="true" stacked="true" canCollapse="true" collapseIf="true">
  		
  		<field name="parentName"/>
  		<field name="testFieldForColumn"/>
  		<field name="isActive" />
  		<field name="image" />
  		<field name="school" />
  	</panel>
  </form>
  <action-record name="action-student-record-onsave" model="com.axelor.student.db.Student">
  	<field name="isActive" expr="true"/>
  </action-record>
  <action-record name="action-student-record-onnew" model="com.axelor.student.db.Student">
  <field name="parentName" expr="axelor pvt ltd"/>
  </action-record>
  <action-validate name="action-student-validate-student">
  	<notify message="This student has failed in current class" if="status == STATUS.FAIL"/>
  </action-validate>
  		
</object-views>